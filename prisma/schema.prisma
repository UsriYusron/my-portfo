generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String?
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Certificate {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  publisher String
  yearGet   Int
  yearEnd   Int?
  link      String?
  image     String?
  description String?
  title String?
  createdAt DateTime @default(now())
}

model Project {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  description String
  image     String?
  link      String?
  createdAt DateTime @default(now())
}

model Blog {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  slug      String
  content   String
  image     String?
  createdAt DateTime @default(now())
}

